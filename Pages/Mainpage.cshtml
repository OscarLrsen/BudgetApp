@page
@model BudgetApp.Pages.Shared.MainpageModel
@{
}

<head>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        .container {
            display: flex;
            justify-content: space-between;
            gap: 20px;
        }

        .box {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 300px;
            flex: 1;
        }
    </style>
</head>

<h1>Budget Helper </h1>


<div class="box">
    <form method="post">
        <h1>Budget</h1>
        <fieldset style="display: flex; flex-direction: column; gap: 10px; max-width: 300px;">
            <label for="income">Income</label>
            <input type="number" placeholder="Enter Total Amount"  id="income" name="income" required>
            <button type="submit" style="width: 120px; height: 35px; white-space: nowrap; border-radius:50px; background-color: blue; color: white;">Set Budget</button>
        </fieldset>
    </form>
</div>


<div class="box">
    <form method="post">
        <h1>Expenses</h1>
        <fieldset style="display: flex; flex-direction: column; gap: 10px; max-width: 300px;">
            <label for="expense">Expense</label>
            <input type="number" placeholder="Enter Title Of Product" id="expense" name="expense" required>
            <input type="number" placeholder="Enter Cost Of Product" id="expense" name="expense" required>
            <button type="submit" style="width: 120px; height: 35px; white-space: nowrap; border-radius:50px; background-color: red; color: white;">Add Expense</button>
        </fieldset>
    </form>
</div>


<style>
    body {
        background: linear-gradient(to right, #e2e2e2, #c9d6ff);
    }

    .register-container {
        width: 350px;
        padding: 20px;
        background-color: #f8f9fa;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        background-color: white;
        margin: 50px auto;
        text-align: center;
    }
</style>




