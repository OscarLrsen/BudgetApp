@page
@model BudgetApp.Pages.Shared.MainpageModel
@{
}

<head>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>

        .container {
            display: flex;
            justify-content: space-between;
            gap: 800px;
        }

        .budgetbox, .expensebox {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 300px;
            flex: 1;
        }

        .expensebox {
            margin-left: auto; /* Flyttar rutan till höger */
        }

       .expenselistbox {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 300px;
            flex: 1;
        }

        .expenses-list {
            display: flex;
            flex-direction: row;
            gap: 20px;
            margin-top: 20px;
            overflow-x: auto; /* Gör listan horisontellt scrollbar om den blir för lång */
        }

        .expense-item {
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            min-width: 150px;
            text-align: center;
        }

        body {
            background: linear-gradient(to right, #e2e2e2, #c9d6ff);
        }

        .summary {
            display: flex;
            justify-content: space-between;
            background: #4a6cf7;
            color: white;
            padding: 15px;
            border-radius: 8px;
            font-size: 18px;
            margin-bottom: 20px;
        }

        .expenses-list {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .expense-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #ddd;
        }

            .expense-item:last-child {
                border-bottom: none;
            }

        .icons {
            display: flex;
            gap: 10px;
        }

            .icons i {
                cursor: pointer;
                font-size: 18px;
            }

                .icons i:hover {
                    color: red;
                }

    </style>
</head>

<h1>Budget Helper </h1>

<div class="container">
<div class="budgetbox">
    <form method="post">
        <h1>Budget</h1>
        <fieldset style="display: flex; flex-direction: column; gap: 10px; max-width: 300px;">
            <label for="income">Income</label>
            <input type="number" placeholder="Enter Total Amount"  id="income" name="income" required>
            <button type="submit" style="width: 120px; height: 35px; white-space: nowrap; border-radius:50px; background-color: blue; color: white;">Set Budget</button>
        </fieldset>
    </form>
</div>


    <div class="expensebox">
        <form method="post">
            <h1>Expenses</h1>
                <fieldset style="display: flex; flex-direction: column; gap: 10px; max-width: 300px;">
                    <label for="expense">Expense</label>
                    <input type="text" placeholder="Enter Title Of Product" id="expense" name="expense" required>
                    <input type="number" placeholder="Enter Cost Of Product" id="expense" name="expense" required>
                    <button type="submit" style="width: 120px; height: 35px; white-space: nowrap; border-radius:50px; background-color: red; color: white;">Add Expense</button>
            </fieldset>
        </form>
    </div>

 </div>
<div class="summary">
    <div>Total Budget: 10000</div>
    <div>Expenses: 4300</div>
    <div>Balance: 5700</div>
</div>
<div class="expenses-list">
    <h2>Expenses List</h2>
    <div class="expense-item">
        <span>Food</span>
        <span>1000</span>
        <div class="icons">
            <i class='bx bx-edit'></i>
            <i class='bx bx-trash'></i>
        </div>
    </div>
    <div class="expense-item">
        <span>Car</span>
        <span>1500</span>
        <div class="icons">
            <i class='bx bx-edit'></i>
            <i class='bx bx-trash'></i>
        </div>
    </div>
    <div class="expense-item">
        <span>Rent</span>
        <span>600</span>
        <div class="icons">
            <i class='bx bx-edit'></i>
            <i class='bx bx-trash'></i>
        </div>
    </div>
    <div class="expense-item">
        <span>Travel</span>
        <span>1200</span>
        <div class="icons">
            <i class='bx bx-edit'></i>
            <i class='bx bx-trash'></i>
        </div>
    </div>
</div>

